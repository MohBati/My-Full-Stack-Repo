Console.WriteLine("Enter First Number:");
int x = int.Parse(Console.ReadLine());

Console.WriteLine("Enter Second Number:");
int y = int.Parse(Console.ReadLine());

int additionResult = x + y;
int subtractionResult = x - y;
int multiplicationResult = x * y;
double divisionResult = (double)x / y; // Convert to double for accurate division

Console.WriteLine("The addition result is: ");
Console.WriteLine(additionResult);
Console.ForegroundColor = ConsoleColor.Red;
Console.ResetColor();

Console.WriteLine("The subtraction result is: ");
Console.WriteLine(subtractionResult);
Console.ForegroundColor = ConsoleColor.Blue;
Console.ResetColor();

Console.WriteLine("The multiplication result is: ");
Console.WriteLine(multiplicationResult);
Console.ForegroundColor = ConsoleColor.White;
Console.ResetColor();

Console.WriteLine("The division result is: ");
Console.WriteLine(divisionResult);
Console.ForegroundColor = ConsoleColor.Magenta;
Console.ResetColor();
